{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "outDir": "dist",
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
